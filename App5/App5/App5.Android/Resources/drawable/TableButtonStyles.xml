<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="false">
    <shape android:shape="rectangle">
      <solid android:color="#f2f4f7"/>
      <stroke android:width="2dp" android:color="@color/abc_secondary_text_material_light"/>
    </shape>
  </item>
    
  <item android:state_pressed="true">
    <shape android:shape="rectangle">
      <gradient android:angle="90" android:centerX="35%" android:centerColor="#999999" android:startColor="#4D4D4D" android:endColor="#FFFFFF" android:type="linear"/>
      <stroke android:width="2dp" android:color="@color/abc_secondary_text_material_light"/>
    </shape>
  </item>
  
</selector>